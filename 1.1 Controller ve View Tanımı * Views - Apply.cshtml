@model Candidate

<div class="display-6">
Apply Page
</div>
<br>
<br>
<form>
    <div class="form-group">
        <label for="emailgiris">Email Address</label>
        <input id="emailgiris" type="email" class="form-control" aria-describedby="emailHelp"/>
    </div>
    <div class="form-gruop">
        <label for="firstname">First Name</label>
        <input id="firstname" type="text" class="form-control" aria-describedby="Disable input"/>
    </div>
    <div class="form-group">
        <label for="lastname">Last Name</label>
        <input id="lastname" type="text" class="form-control" aria-describedby="Disable input"/>
    </div>
    <div class="form-group my-2">
    <label for="age">Age</label>
    <select id="age" class="form-control">
        @for (int i = 7; i <= 50; i++)
        {
            <option value="@i">@i</option>
        }
    
    </select>
    </div>
    <div class="form-group">
        <fieldset>
            <legend>Select one course</legend>
            <p>
                <input id="mvc" type="radio" name="SelectedCourse" value="ASP.NET Core MVC"/>
                <label for="mvc">ASP.NET Core MVC Course</label>
            </p>
            <p>
                <input id="api" type="radio" name="SelectedCourse" value="ASP.NET Core API"/>
                <label for="api">ASP.NET Core API Course</label>
            </p>
            <p>
                <input id="csharp" type="radio" name="SelectedCourse" value="csharp"/>
                <label for="csharp">C# Course</label>
            </p>
            
        </fieldset>

    </div>
    <div class="log">
        <button type="submit" class="btn btn-primary">Apply</button>
        <a class="btn btn-secondary" href="/">Home Page</a>
    </div>
</form>
