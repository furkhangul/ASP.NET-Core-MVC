@model PostDatum;
<form asp-action="Edit" asp-controller="Post" method="post">
    <div class="form-group">
        <label>Post Date</label>
        <input type="date" class="form-control" asp-for="@Model.PostDate" placeholder="Date">
    </div>
    <div class="form-group">
        <label>User by</label>
        <input type="number" class="form-control" asp-for="@Model.Id" placeholder="User by">
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>