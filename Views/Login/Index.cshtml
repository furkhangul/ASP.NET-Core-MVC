@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FurOfTheWeak.Models.Data

<div class="display-6 text-center text-secondary">Admin Giriş Sayfası</div>

<div class="d-flex justify-content-center align-items-center mt-5">
    @Html.AntiForgeryToken()
    <form asp-controller="Login" asp-action="Index" method="post" class="p-5 border shadow rounded-5 w-50">

        <input asp-for="Username" class="form-control mb-2" placeholder="Kullanıcı Adı" />
        <span asp-validation-for="Username" class="text-danger"></span>

        <input asp-for="Password" type="password" class="form-control mb-2" placeholder="Şifre" />
        <span asp-validation-for="Password" class="text-danger"></span>
        <br />
        <input type="submit" value="Giriş" class="btn btn-primary mt-3" />
    </form>
</div>

