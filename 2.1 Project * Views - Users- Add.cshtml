@addTagHelper *, Microsoft.AspNetCore.Razor.TagHelpers
@model Basic.Models.Data

<form asp-action="Add" asp-controller="Users" method="post">
    <input type="number" placeholder="ID" class="form-control" asp-for="Id" required/><br />
    <input type="text" placeholder="Username" class="form-control" asp-for="Username" required/><br />
    <input type="text" placeholder="Email" class="form-control" asp-for="Email" required /><br />
    <input type="password" placeholder="Password" class="form-control" asp-for="Password" required/><br />
    <input type="submit" class="btn btn-secondary" value="User Add" />

</form>
